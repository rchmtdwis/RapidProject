@using ProjectMVC.ViewModels
@model ProductViewModel

<html>
<head>
    <title>Edit Product</title>
</head>
<body>
    <h2>Edit Product</h2>
    <form method="post" action="/Products/Edit">
        <input type="hidden" value="@Model.Id" name="ProductId" />
        <div>
            <label for="Name">Product Name:</label>
            <input type="text" value="@Model.Name" name="Name" />

            <label for="StockLevel">Stock Level:</label>
            <input type="text" value="@Model.Stock" name="StockLevel" />
            <label for="Price">Price:</label>
            <input type="text" value="@Model.Price" name="Price" />
        </div>
        <div>
            <input type="submit" value="Edit" />
        </div>
    </form>
</body>
</html>